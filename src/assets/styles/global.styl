* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body
  color: #333
  font-size: 14px
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif


.app-wper {
  max-width: 500px;
  margin: 80px auto;
  border-radius: 12px;
  background: #f4f0ea;
  padding: 15px;
  outline: 6px solid #b4a078;
  box-shadow: 0 0 0 5px #b4a078;
  // box-shadow: 3px 3px 17px -2px #d5cdcd;
}


h2 {
  font-weight: normal;
  color: #777;
  text-align: center;
}

.edit {
  display: block;
  width: 80%;
  height: 35px;
  line-height: 35px;
  margin: 30px auto;
  box-sizing: border-box;
  padding: 0 10px;
  border-radius: 4px;
  border: 1px solid #cacaca;
  outline: 0;
}

.edit:focus {
  border-color: #b4a078;
  box-shadow: 0 0 5px #b4a078;
  transition: all .4s ease-in-out
}

.list {
  width: 80%;
  margin: 0 auto;
}

.unit {
  padding: 15px 0;
  position: relative;
  padding-right: 45px;
}

.border {
  border-top: 1px solid #e1dcdc;
}

.unit>span {
  font-size: 15px;
  color: #4a4a4a;
}

.unit>.finished {
  text-decoration: line-through;
  color: #ccc;
}

.dele {
  position: absolute;
  right: 0;
  top: 12px;
  float: right;
  color: #fff;
  background-color: #ea4e4e;
  padding: 2px 8px;
  font-size: 12px;
  border-radius: 4px;
  cursor: pointer;
}

.border input:hover,
.dele:hover {
  opacity .6
  transition: all .2s ease-in-out
}

.empty {
  font-size: 13px;
  color: #ccc;
  text-align: center;
  padding: 10px 0;
}

/* input type="checkbox" start */
input[type="checkbox"]
  position absolute
  clip rect(0, 0, 0, 0)

input[type="checkbox"] + label 
  cursor pointer
  position relative
  line-height 1
  user-select none

input[type="checkbox"] + label:not(:nth-of-type(1))
  margin-top: 29px
  margin-bottom: 29px

input[type="checkbox"]:checked + label 
  color: #b4a078

input[type="checkbox"]:disabled + label {
  cursor: not-allowed;
  color: #999;
}

input[type="checkbox"] + label::before 
  content: ""
  display: inline-block
  width: 10px
  height: 10px
  border-radius: 2px
  vertical-align: top
  margin-top: 2px
  margin-right: 4px
  border: 1px solid #cccccc
  background-color: #ffffff
  transition: border-color .2s ease-in-out, background-color .2s ease-in-out

input[type="checkbox"]:not(:disabled) + label:hover::before 
  border-color: #b4a078

input[type="checkbox"] + label::after 
  content: ""
  display inline-block
  width: 3px
  height: 7px
  border: 1px solid #ffffff
  border-top: 0
  border-left: 0
  position: absolute
  left: 4px
  top: 3px
  transform: rotate(45deg) scale(1)
  transition: all .2s ease-in-out

input[type="checkbox"]:checked + label::before
  border-color: #b4a078 !important 
  background-color: #b4a078

input[type="checkbox"]:checked + label::after
  transform: reotate(45deg) scale(1)
  transition: all .2s ease-in-out

input[type="checkbox"]:disabled + label::before, input[type="checkbox"]:disabled.checked + label::before{
  background-color: #f2f2f2;
}

input[type="checkbox"]:disabled.checked + label::after{
  border-color: #ccc;
  transform: rotate(45deg) scale(1);
}
/* input type="checkbox" end */

